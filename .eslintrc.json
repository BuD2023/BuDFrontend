{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [ "airbnb-base", "plugin:import/typescript", "prettier", "plugin:tailwindcss/recommended", "plugin:prettier/recommended", "eslint:recommended"  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 14,
    "sourceType": "module"
  },
  "plugins": ["react", "@typescript-eslint", "tailwindcss"],
  "rules": {
    "import/no-unresolved": "off",
    "linebreak-style": 0,
    "import/extensions": [
      "error",
      "ignorePackages",
      {
        "ts": "never",
        "tsx": "never",
        "js": "never",
        "jsx": "never",
        "mjs": "never"
      }
    ],
    "import/no-extraneous-dependencies": ["error", { "devDependencies": true }]
  }
}
